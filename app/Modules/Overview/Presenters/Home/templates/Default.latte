{block title}
	Denní menu
{/block}

{block content}
	<div class="container mb-4">
		<h2>🍺 Copak máme dnes v Jičíně k obědu?</h2>

		{* Generate menu *}
		<div class="btn-group btn-group-toggle mt-3" n:inner-foreach="$days as $webalize => $name">
			<a class="btn btn-primary {ifCurrent Home:Default $webalize}active{/ifCurrent}" n:href="this $webalize">
				{$name}
			</a>
		</div>

		{foreach $restaurants as $restaurant}
			<div class="card mt-4">
				<div class="card-header">{$restaurant->name}</div>
				<div class="card-body">
					Polévky:
					{foreach $restaurant->getsoups($now) as $soup}
						{$soup->name}{sep}, {/sep}
					{/foreach}

					<ul n:inner-foreach="$restaurant->getMeals($now) as $meal">
						<li class="mt-4 mt-md-1">
							{$meal->name} <b>({$meal->price} kč)</b>
						</li>
					</ul>
					<a href="{$restaurant->link}" class="d-none d-md-inline btn btn-primary">
						Přejít na web restaurace
					</a>
				</div>
			</div>
		{/foreach}
	</div>
{/block}
